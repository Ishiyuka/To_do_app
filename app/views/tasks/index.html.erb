<h1>タスク一覧</h1>
<p><%= flash[:notice] %>
<%= alert %>

<table>
<tr>
<td>リスト</td>
<td>詳細</td>
</tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.list %></td>
    <td><%= task.detail %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete %></td>

  </tr>
<% end %>
</table>

<%= link_to '新たなタスクを作成する', new_task_path %>