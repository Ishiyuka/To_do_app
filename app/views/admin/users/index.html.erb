<h1>ユーザー 一覧</h1>

  <p class= 'btn btn-primary'><%= link_to "新規登録", new_admin_user_path %></p>

<div class = "mb-3">
<table class = "table-hover">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:task_count) %></th>
      <th><%= User.human_attribute_name(:admin) %></th>
      <th><%= User.human_attribute_name(:created_at) %></th>
      <th><%= User.human_attribute_name(:updated_at) %></th>
    </tr>
  </thead>
</div>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name,[:admin, user] %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><% if user.admin? %>
          <p>あり</p>
            <% else %>
          <p>なし</p>
            <% end %>
          </td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td class="btn btn-info mr-3" ><%= link_to "詳細", admin_user_path(user.id) %></td>
        <td class="btn btn-primary mr-3" ><%= link_to "編集", edit_admin_user_path(user.id) %></td>
        <td class="btn btn-danger"><%= link_to "削除", admin_user_path(user.id), method: :delete,
                            data: { confirm: "ユーザー「#{user.name}」を削除します。よろしいですか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
